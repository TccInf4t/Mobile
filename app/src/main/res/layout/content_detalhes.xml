<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="onpecas.com.br.app.DetalhesActivity"
    tools:showIn="@layout/app_bar_detalhes">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="35dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:text="Detalhes"
            android:textSize="35dp"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-38dp"
            android:layout_marginRight="65dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#5af"
            />
    </LinearLayout>



    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        tools:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        android:background="#fff"
        app:cardCornerRadius="2dp"
        android:layout_marginTop="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="Nome do Peddo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="-140dp"
            android:textColor="#000"
            android:textSize="17dp"
            android:text="Tipo do pedido"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="-100dp"
                android:textSize="17dp"
                android:textColor="#000"
                android:text="descricao do pedido"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="150dp"
        android:layout_height="130dp"
        tools:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        android:background="#fff"
        app:cardCornerRadius="2dp"
        android:layout_marginTop="210dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="17dp"
            android:textColor="#000"
            android:text="Quantidade"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:textSize="40dp"
            android:textColor="#5af"
            android:text="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="45dp"
            android:textSize="17dp"
            android:textColor="#000"
            android:text="Pedidos"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="190dp"
        android:layout_height="130dp"
        tools:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        android:layout_marginLeft="160dp"
        android:background="#fff"
        app:cardCornerRadius="2dp"
        android:layout_marginTop="210dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frete"
            android:textColor="#5af"
            android:textSize="17dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 100,00"
            android:layout_marginLeft="4dp"
            android:textColor="#000"
            android:textSize="17dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor Total"
                android:textColor="#5af"
                android:layout_marginTop="6dp"
                android:textSize="17dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 3600,00"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:textSize="17dp"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:textSize="20dp"
        android:textColor="#5af"
        android:text="Status:"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="363dp"
        android:layout_marginLeft="70dp"
        android:textSize="15dp"
        android:textColor="#000"
        android:text="Aguardando transportadora"/>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="355dp"
        android:layout_height="50dp"
        tools:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:background="#fff"
        app:cardCornerRadius="2dp"
        android:layout_marginTop="400dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            android:textSize="15sp"
            android:text="Transportadora pegou os produtos e já está em transporte."/>


    </android.support.v7.widget.CardView>
</RelativeLayout>
